version: '3.1'

services:
{% for db in database.value %}
    {{ db.image | split(':') | last }}:
        image: {{ db.image }}
        restart: always
{% if db.environment is defined %}
        environment:
            {{ db.environment | to_nice_yaml }}
{% endif %}
{% if db.ports is defined %}
        ports:
            {{ db.ports | to_nice_yaml }}
{% endif %}

{% endfor %}

